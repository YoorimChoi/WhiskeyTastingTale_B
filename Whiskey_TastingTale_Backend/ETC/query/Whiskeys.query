-------------------------------------------------------------------------------

CREATE TRIGGER UpdateCreatedDate
ON Whiskeys
AFTER INSERT
AS
BEGIN
    UPDATE Whiskeys
    SET created_date = getDate()
    FROM Whiskeys
    JOIN inserted ON Whiskeys.whiskey_id = inserted.whiskey_id;
END;

