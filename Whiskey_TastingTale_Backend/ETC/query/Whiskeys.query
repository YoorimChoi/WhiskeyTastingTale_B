use Whiskey_TT; 

-------------------------------------------------------------------------------

CREATE TABLE Whiskeys(
    whiskey_id INT PRIMARY KEY IDENTITY,
    img_index NVARCHAR(MAX),
    details NVARCHAR(MAX),
    page_url NVARCHAR(MAX),
    alcohol_degree FLOAT,
    maker NVARCHAR(MAX),
    created_date DATETIME
);

-------------------------------------------------------------------------------

INSERT INTO WhiskeyInfo (img_index, details, page_url, alcohol_degree, maker)
VALUES (@img_index, @details, @page_url, @alcohol_degree, @maker);

INSERT INTO Whiskeys (img_index, details, page_url, alcohol_degree, maker)
